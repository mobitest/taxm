<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本名称"
            android:padding="3dip" 
            android:textAppearance="@style/TextAppearanceAlertDialog"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        	android:id="@+id/newVersionName"
            android:padding="3dip" 
            android:textAppearance="@style/TextAppearanceAlertDialog"/>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="3dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间"
            android:textAppearance="@style/TextAppearanceAlertDialog"
            android:padding="3dip" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newVersionDate"
            android:textAppearance="@style/TextAppearanceAlertDialog"
            android:padding="3dip" />
</LinearLayout>
<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:id="@+id/newVersionInfo"
    android:textAppearance="@style/TextAppearanceAlertDialog"
    android:padding="3dip"/>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dip"
    android:fadeScrollbars="true">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	android:id="@+id/newVersionRemark"
        android:textAppearance="@style/TextAppearanceAlertDialog"
        android:padding="3dip" />
</ScrollView>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginRight="10dip"
    android:gravity="center_vertical|right">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:id="@+id/check_update_again"

        android:text="下次不再提醒"
        android:textAppearance="@style/TextAppearanceAlertDialog"
        android:textColor="@color/text_color_white"/>
    <CheckBox
	    android:id="@+id/show_update_again"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="3dip"/>
</LinearLayout>
</LinearLayout>



